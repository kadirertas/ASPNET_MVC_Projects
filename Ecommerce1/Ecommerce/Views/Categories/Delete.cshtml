@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model Ecommerce.Models.Entity.Category

<h1>Kategoriyi Sil</h1>

<h3>Bunu silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Kategori</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kategori İsmi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            Kategori Resmi
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.CategoryImageUrl" alt="Kategori Resmi" style="width:100px;height:auto;" />
        </dd>
        <dt class="col-sm-2">
            Şu An Aktif mi?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            Tarih
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Kategoriyi Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
