@using Ecommerce.Models.Entity
@model Users
@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/AdminPage/assets/images/favicon.png">
    <title>Adminmart Template - The Ultimate Multipurpose admin template</title>
    <!-- Custom CSS -->
    <link href="~/AdminPage/dist/css/style.min.css" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative" style="background:url(/AdminPage/assets/images/big/auth-bg.jpg) no-repeat center center;">
            <div class="auth-box row text-center">
                <div class="col-lg-7 col-md-5 modal-bg-img" style="background-image: url(/AdminPage/assets/images/big/3.jpg);">
                </div>
                <div class="col-lg-5 col-md-7 bg-white">
                    <div class="p-3">
                        <img src="~/AdminPage/assets/images/big/icon.png" alt="wrapkit">
                        <h2 class="mt-3 text-center">Sign Up for Free</h2>
                        @using (Html.BeginForm("SignUp", "Users", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mt-4" }))
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your Name", required = "required" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username", required = "required" })
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" }) <!-- Kullanıcı adı alanı için hata mesajı alanı -->
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", placeholder = "Mobile", pattern = "[0-9]{10}", required = "required" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Address", required = "required" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Adress, new { @class = "form-control", placeholder = "Address", required = "required" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control", placeholder = "Postcode", required = "required" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="profilePicture">Profile Picture</label>
                                        <input class="form-control" type="file" name="profilePicture" id="profilePicture" accept=".png" required>
                                        <small class="form-text text-muted">Please choose a PNG file.</small>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.DropDownListFor(m => m.RolId, new SelectList(new[]
                                                 {
                                    new SelectListItem { Value = "1", Text = "Admin" },
                                    new SelectListItem { Value = "2", Text = "User" }
                                    // Diğer roller buraya eklenebilir
                                    }, "Value", "Text"), new { @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn btn-block btn-dark">Sign Up</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- All Required js -->
    <!-- ============================================================== -->
    <script src="~/AdminPage/assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/AdminPage/assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/AdminPage/assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
</body>
</html>
