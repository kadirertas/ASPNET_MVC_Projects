@model List<CoffeApp.Models.Entity.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .custom-menu-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly; /* Öğeleri eşit mesafelerle ortala */
            gap: 20px; /* Aralarındaki boşluk */
        }

        .custom-menu-item {
            flex: 1 1 calc(30% - 20px); /* Her satırda 3 öğe olacak şekilde ayarla */
            max-width: 30%;
            position: relative;
            overflow: hidden;
            height: 300px;
            border-radius: 10px;
            margin-bottom: 20px; /* Kategoriler arasına boşluk ekleyin */
        }

        .custom-menu-item img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Resimleri çerçeveye sığdır */
            transition: transform 0.3s ease;
        }

        .custom-menu-item:hover img {
            transform: scale(1.3); /* Hover efekti */
        }

        .custom-category-name {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            font-size: 35px;
            background-color: rgba(0, 0, 0, 0.2);
            padding: 5px 10px;
            border-radius: 5px;
            text-align: center;
            width: 80%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .menuItem {
            display: flex;
            width: 100%;
            height: 100%;
            justify-content: center;
            align-items: center;
            position: relative;
        }

    </style>
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5">
        <div id="blog-carousel" class="carousel slide overlay-bottom" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/img/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <h2 class="text-primary font-weight-medium m-0">We Have Been Serving</h2>
                        <h1 class="display-1 text-white m-0">COFFEE</h1>
                        <h2 class="text-white m-0">* SINCE 2015 *</h2>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="img/carousel-2.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <h2 class="text-primary font-weight-medium m-0">We Have Been Serving</h2>
                        <h1 class="display-1 text-white m-0">COFFEE</h1>
                        <h2 class="text-white m-0">* SINCE 2015 *</h2>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#blog-carousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#blog-carousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
    <!-- Carousel End -->
    <!-- Menu Container Start -->
 @*    <div class="custom-menu-container">
        @foreach (var category in Model)
        {
            <div class="custom-menu-item">
                <img src="@category.ImageUrl" alt="@category.CategoryName" />
                <div class="custom-category-name">@category.CategoryName</div>
            </div>

        }
        
    </div> *@
    <div class="custom-menu-container">
        @foreach (var category in Model)
        {
            <div class="custom-menu-item">
                <a href="@Url.Action("Category", "Menu", new { categoryId = category.CategoryId})">
                    <img src="@category.ImageUrl" alt="@category.CategoryName" />
                    <div class="custom-category-name">@category.CategoryName</div>
                </a>
            </div>
        }
    </div>

    <!-- Menu Container End -->
</body>
</html>
