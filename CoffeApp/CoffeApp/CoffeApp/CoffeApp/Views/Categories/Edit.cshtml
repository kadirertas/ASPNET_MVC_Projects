@model CoffeApp.Models.Entity.Category
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container-fluid page-header mb-5 position-relative overlay-bottom">
    <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 400px">
        <h1 class="display-4 mb-3 mt-0 mt-lg-5 text-white text-uppercase">Edit Category</h1>
        <div class="d-inline-flex mb-lg-5">
            <p class="m-0 text-white"><a class="text-white" href="/">Home</a></p>
            <p class="m-0 text-white px-2">/</p>
            <p class="m-0 text-white">Edit</p>
        </div>
    </div>
</div>

<div class="container pt-5">
    <h2>Edit Category</h2>

    @using (Html.BeginForm("Edit", "Categories", FormMethod.Post))
    {
        <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
        <div class="form-group">
            <label for="CategoryName" class="control-label">Category Name<span class="text-danger">*</span></label>
            <input name="CategoryName" class="form-control" value="@Model.CategoryName" required />
        </div>

        <div class="form-group">
            <label for="ImageUrl" class="control-label">Current Category Image</label><br />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Current Image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                <br />
                <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
            }
            else
            {
                <span class="text-danger">No Image</span>
            }
        </div>

        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    }
</div>
