@model List<CoffeApp.Models.Entity.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<style>
    .full-screen-table {
        width: 100%;
        height: 100vh;
        overflow-x: auto;
    }

    .full-screen-card {
        margin: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
        font-size: 1.5rem;
        padding: 10px 20px;
    }

    .table thead th {
        background-color: #f8f9fa;
    }

    .table img {
        width: 120px; /* Resim genişliği */
        height: auto; /* Otomatik yükseklik */
    }

    .table td {
        font-size: 1.2rem; /* Yazı boyutu */
    }

    .btn-view-details, .btn-update, .btn-delete {
        margin: 5px;
        padding: 5px 10px;
        border: none;
        color: #fff;
    }

    .btn-view-details {
        background-color: #007bff;
    }

        .btn-view-details:hover {
            background-color: #0056b3;
        }

    .btn-update {
        background-color: #28a745;
    }

        .btn-update:hover {
            background-color: #218838;
        }

    .btn-delete {
        background-color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card full-screen-card">
                <h5 class="card-header">Son Ürünler</h5>
                <div class="card-body p-0">
                    <div class="table-responsive full-screen-table">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Kategori Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>
                                            <img src="@Model[i].ImageUrl" alt="product" class="img-thumbnail">
                                        </td>
                                        <td>@Model[i].CategoryName</td>
                                        <td>
                                            <a class="btn btn-update" asp-controller="Categories" asp-action="Edit" asp-route-id="@Model[i].CategoryId">Güncelle</a>
                                            <a class="btn btn-delete" asp-controller="Categories" asp-action="Delete" asp-route-id="@Model[i].CategoryId">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
