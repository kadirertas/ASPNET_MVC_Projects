@model CoffeApp.Models.Entity.Products

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container-fluid page-header mb-5 position-relative overlay-bottom">
    <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 400px">
        <h1 class="display-4 mb-3 mt-0 mt-lg-5 text-white text-uppercase">Edit Product</h1>
        <div class="d-inline-flex mb-lg-5">
            <p class="m-0 text-white"><a class="text-white" href="/">Home</a></p>
            <p class="m-0 text-white px-2">/</p>
            <p class="m-0 text-white">Edit</p>
        </div>
    </div>
</div>

<div class="container pt-5">
    <h2>Edit Product</h2>

    @using (Html.BeginForm("Edit", "Products", FormMethod.Post))
    {
        <input type="hidden" name="ProductId" value="@Model.ProductId" />

        <div class="form-group">
            <label for="CategoryId" class="control-label">Category<span class="text-danger">*</span></label>
            @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.CategoryList, "Select Category", new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            <label for="ProductName" class="control-label">Product Name<span class="text-danger">*</span></label>
            <input name="ProductName" class="form-control" value="@Model.ProductName" required />
        </div>
        <div class="form-group">
            <label for="Price" class="control-label">Price<span class="text-danger">*</span></label>
            <input name="Price" class="form-control" value="@Model.Price" required />
        </div>
        <div class="form-group">
            <label for="ProductImageUrl" class="control-label">Current Product Image</label><br />
            @if (!string.IsNullOrEmpty(Model.ProductImageUrl))
            {
                <img src="@Model.ProductImageUrl" alt="Current Image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                <br />
                <input type="hidden" name="ProductImageUrl" value="@Model.ProductImageUrl" />
            }
            else
            {
                <span class="text-danger">No Image</span>
            }
        </div>
        <div class="form-group">
            <label for="Description" class="control-label">Description</label>
            <input name="Description" class="form-control" value="@Model.Description" />
            @if (string.IsNullOrEmpty(Model.Description))
            {
                <span class="text-muted">No Description</span>
            }
        </div>
        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    }
</div>
